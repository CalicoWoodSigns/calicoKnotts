# Staging Environment Configuration
# Copy this file and rename to staging.env, then fill in your actual values

# Remote server configuration
REMOTE_HOST="your-staging-server.com"
REMOTE_USER="your-username"
REMOTE_PATH="/path/to/staging/webroot/KBFData"

# Deployment method: rsync or git
DEPLOY_METHOD="rsync"

# Application URL
APPLICATION_URL="https://staging.your-domain.com/KBFData/"

# Optional: Command to restart services after deployment
RESTART_COMMAND="sudo systemctl restart coldfusion"

# SSH key path (if using key-based authentication)
SSH_KEY_PATH="~/.ssh/id_rsa"

# Backup configuration
BACKUP_ENABLED=true
BACKUP_PATH="/backups/staging/KBFData"
